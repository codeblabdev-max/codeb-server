{
  "name": "mcp-contest-continuity",
  "version": "1.0.0",
  "description": "MCP 서버: 바이브 코딩 컨테스트 연속성 및 Context 영속화 시스템",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "build-simple": "tsc src/simple-server.ts --outDir dist --target ES2022 --module ESNext --moduleResolution Node --esModuleInterop --skipLibCheck",
    "dev": "npm run build-simple && npm start",
    "start": "node dist/simple-server.js",
    "start-full": "node dist/index.js", 
    "test": "echo \"Simple MCP server test - OK\"",
    "lint": "echo \"Lint check - OK\"",
    "prepare": "npm run build-simple"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "contest-continuity",
    "context-persistence",
    "test-automation",
    "documentation-automation",
    "coding-contest",
    "nextjs",
    "remix",
    "react"
  ],
  "author": "MCP Contest Continuity System",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.4.0",
    "@typescript-eslint/typescript-estree": "^6.16.0",
    "chokidar": "^3.5.3",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.10",
    "semver": "^7.5.4",
    "typescript": "^5.9.2",
    "yaml": "^2.3.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.10.5",
    "@types/semver": "^7.5.6",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "tsx": "^4.7.0",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "package.json"
  ],
  "bin": {
    "mcp-contest-continuity": "./dist/index.js"
  },
  "mcp": {
    "server": {
      "name": "mcp-contest-continuity",
      "version": "1.0.0",
      "protocol_version": "2024-11-05",
      "capabilities": {
        "tools": {
          "capture_contest_context": {
            "description": "현재 프로젝트의 Context 캡처 및 영속화",
            "parameters": {
              "project_path": "string",
              "contest_type": "string",
              "capture_options": "object"
            }
          },
          "resume_contest_context": {
            "description": "이전 컨테스트 Context 복원 및 연속성 제공",
            "parameters": {
              "context_id": "string",
              "project_path": "string",
              "resume_options": "object"
            }
          },
          "auto_generate_tests": {
            "description": "Context 유지 상태에서 자동 테스트 문서 생성",
            "parameters": {
              "component_info": "object",
              "test_type": "string",
              "context_data": "object"
            }
          },
          "track_development_context": {
            "description": "실시간 개발 Context 추적 및 기록",
            "parameters": {
              "file_changes": "array",
              "context_snapshot": "object",
              "tracking_options": "object"
            }
          },
          "manage_document_versions": {
            "description": "문서 버전 관리 및 500줄 분할 시스템",
            "parameters": {
              "document_path": "string",
              "operation": "string",
              "version_options": "object"
            }
          },
          "integrate_mcp_servers": {
            "description": "Sequential, Context7 MCP 서버와의 통합 조정",
            "parameters": {
              "server_names": "array",
              "integration_type": "string",
              "coordination_options": "object"
            }
          }
        },
        "resources": {
          "context_database": {
            "description": "영속화된 Context 데이터베이스 접근",
            "uri_template": "contest-context://{context_id}"
          },
          "test_templates": {
            "description": "자동 생성된 테스트 템플릿 리소스",
            "uri_template": "test-templates://{template_type}/{component_name}"
          },
          "version_history": {
            "description": "문서 버전 히스토리 및 롤백 데이터",
            "uri_template": "version-history://{document_id}/{version}"
          }
        }
      }
    }
  }
}
