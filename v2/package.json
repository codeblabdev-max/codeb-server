{
  "name": "codeb-server-v2",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "bundle": "node scripts/bundle.mjs",
    "bundle:cli": "node scripts/bundle.mjs --cli",
    "bundle:mcp": "node scripts/bundle.mjs --mcp",
    "tarball": "bash scripts/create-tarball.sh",
    "dev": "turbo dev",
    "dev:api": "turbo dev --filter=@codeb/api",
    "dev:cli": "turbo dev --filter=@codeb/cli",
    "lint": "turbo lint",
    "test": "turbo test",
    "typecheck": "turbo typecheck",
    "clean": "turbo clean",
    "format": "prettier --write \"**/*.{ts,json,md}\""
  },
  "devDependencies": {
    "esbuild": "^0.24.0",
    "turbo": "^2.3.0",
    "typescript": "^5.7.0",
    "prettier": "^3.4.0",
    "@types/node": "^22.10.0"
  },
  "packageManager": "pnpm@9.15.4",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  }
}
